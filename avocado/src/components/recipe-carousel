import Carousel from 'react-bootstrap/Carousel';

function RecipeCarousel({ selectedRecipe }) {
    return (
        <Carousel>
            {selectedRecipe.instructions.map((instruction, index) => (
                <Carousel.Item key={index}>
                    <Carousel.Caption>
                        <h3>Step {index + 1}</h3>
                        <p>{instruction}</p>
                    </Carousel.Caption>
                </Carousel.Item>
            ))}
        </Carousel>
    );
}

export default RecipeCarousel;